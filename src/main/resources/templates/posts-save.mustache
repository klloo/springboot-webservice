{{>layout/header}}

<style>
        *{
            border-collapse: collapse;
            margin: 0%;
            padding: 0%;
            text-decoration: none;
            color: black;
            list-style: none;
        }
        .title{
            margin: 8%;
            text-align: center;
            font-style: italic;
        }
        .input_form {
            padding-left: 20%;
            padding-right: 20%;
            padding-bottom: 15%;
        }
        .btn {
            display: flex;
            padding-top: 5%;
            justify-content: center;
        }
        .btn > a {
            margin: 2%;
            color: grey;
            text-decoration=none;
        }
        .btn > div {
            margin: 2%;
        }


     </style>
<h1 class="title">WRITE</h1>

<div class="input_form">
    <form>
        <div class="form-group">
            <label for="title">TITLE</label>
            <input type="text" class="form-control" id="title" placeholder="title">
        </div>
        <div class="form-group">
            <label for="author"> WRITER </label>
            <input type="text" class="form-control" id="author" placeholder="writer">
        </div>
        <div class="form-group">
            <label for="content"> CONTENT </label>
            <textarea class="form-control" id="content" placeholder="content"></textarea>
        </div>
        <div class="read_only">
            <label for="email"> E-MAIL </label>
            <input type="text" class="form-control" id="email" value="{{userEmail}}" readonly>
        </div>
    </form>
    <div class="btn">
        <a href="/" role="button" class="cancel_btn">CANCEL</a>
        <div type="button" class="save_btn" id="btn-save">WRITE</div>
    </div>
</div>


{{>layout/footer}}